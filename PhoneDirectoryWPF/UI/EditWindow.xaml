<Window
                xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PhoneDirectoryWPF.UI"
        xmlns:Containers="clr-namespace:PhoneDirectoryWPF.Containers" x:Class="PhoneDirectoryWPF.UI.EditWindow"
     TextElement.Foreground="{DynamicResource MaterialDesignBody}"
     TextElement.FontWeight="Regular"
     TextElement.FontSize="13"
     TextOptions.TextFormattingMode="Ideal"
     TextOptions.TextRenderingMode="Auto"
     Background="{DynamicResource MaterialDesignDarkBackground}"
     Foreground="{DynamicResource MaterialDesignLightBackground}"
     FontFamily="{DynamicResource MaterialDesignFont}"
        mc:Ignorable="d"
        Title="Edit" Height="367" Width="952.9" ResizeMode="NoResize" WindowStartupLocation="CenterScreen">
    <Window.DataContext>
        <Containers:Extension/>
    </Window.DataContext>
    <Grid>
        <materialDesign:DialogHost Name="PopupDialog">
           
        </materialDesign:DialogHost>
        <GroupBox x:Name="groupBox" Header="Edit Extension" Margin="10">
            <Grid>
                
                <Grid.RowDefinitions>
                    <RowDefinition Height="85*"/>
                    <RowDefinition Height="67*"/>
                    <RowDefinition Height="105*"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="73*"/>
                    <ColumnDefinition Width="106*"/>
                    <ColumnDefinition Width="213*"/>
                    <ColumnDefinition Width="225*"/>
                    <ColumnDefinition Width="316*"/>
                </Grid.ColumnDefinitions>
                <TextBox x:Name="idTextBox" Height="29" Margin="10,47,10,0" TextWrapping="Wrap" VerticalAlignment="Top" Grid.Column="0" IsReadOnly="True" Text="{Binding ID, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>
                <Label x:Name="label" Content="ID" HorizontalAlignment="Left" Height="27" Margin="10,15,0,0" VerticalAlignment="Top" Width="56" Grid.Column="0"/>
                <TextBox x:Name="extensionTextBox" Height="29" Margin="10,47,10,0" TextWrapping="Wrap" VerticalAlignment="Top" Grid.Column="1" Text="{Binding Number, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>
                <Label x:Name="label_Copy" Content="Extension" HorizontalAlignment="Left" Height="27" Margin="10,15,0,0" VerticalAlignment="Top" Width="78" Grid.Column="1"/>
                <TextBox x:Name="firstNameTextBox" Height="29" Margin="10,47,10,0" TextWrapping="Wrap" VerticalAlignment="Top" Grid.Column="2" Text="{Binding FirstName, Mode=TwoWay, NotifyOnTargetUpdated=True, NotifyOnSourceUpdated=True, UpdateSourceTrigger=PropertyChanged}" KeyUp="firstNameTextBox_KeyUp"/>
                <Label x:Name="label_Copy1" Content="First Name" HorizontalAlignment="Left" Height="27" Margin="10,15,0,0" VerticalAlignment="Top" Width="119" Grid.Column="2"/>
                <TextBox x:Name="lastNameTextBox" Height="29" Margin="10,47,10,0" TextWrapping="Wrap" VerticalAlignment="Top" Grid.Column="3" Text="{Binding LastName, Mode=TwoWay, NotifyOnTargetUpdated=True, NotifyOnSourceUpdated=True, UpdateSourceTrigger=PropertyChanged}"/>
                <Label x:Name="label_Copy2" Content="Last Name (Optional)" HorizontalAlignment="Left" Height="27" Margin="10,15,0,0" VerticalAlignment="Top" Width="175" Grid.Column="3"/>
                <TextBox x:Name="departmentTextBox" Height="29" Margin="10,47,10,0" TextWrapping="Wrap" VerticalAlignment="Top" Grid.Column="4" Text="{Binding Department, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>
                <Label x:Name="label_Copy3" Content="Department" HorizontalAlignment="Left" Height="27" Margin="10,15,0,0" VerticalAlignment="Top" Width="175" Grid.Column="4"/>
                <TextBox x:Name="extensionNameTextBox" Margin="10,0,10,10" TextWrapping="Wrap" Grid.Column="2" Grid.Row="1" Grid.ColumnSpan="2" Height="29" VerticalAlignment="Bottom" IsReadOnly="True" Text="{Binding User, Mode=OneWay, NotifyOnTargetUpdated=True, NotifyOnSourceUpdated=True}"/>
                <Label x:Name="label_Copy4" Content="Extension Name" HorizontalAlignment="Left" Margin="10,0,0,39" Width="119" Grid.Column="2" Grid.Row="1" Height="27" VerticalAlignment="Bottom"/>
                <Grid Grid.Column="4" Margin="0,19,12,2" Grid.Row="2" HorizontalAlignment="Right" Width="195">
                    <Button x:Name="cancelButton" Content="Close" HorizontalAlignment="Left" Height="66" Margin="10,10,0,0" VerticalAlignment="Top" Width="177" Click="cancelButton_Click"/>
                </Grid>
                <WrapPanel HorizontalAlignment="Left" Margin="23,29,0,0" Grid.Row="2" Width="246" Grid.ColumnSpan="3">
                    <Button x:Name="saveButton" Content="Save" HorizontalAlignment="Left" Height="66" VerticalAlignment="Top" Width="110" Click="saveButton_Click"/>
                    <Button x:Name="addButton" Content="Add" HorizontalAlignment="Left" Height="66" VerticalAlignment="Top" Width="110" Click="addButton_Click"/>
                </WrapPanel>
            </Grid>
        </GroupBox>
    </Grid>
</Window>
    

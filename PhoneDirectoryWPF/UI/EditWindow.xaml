<Window
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PhoneDirectoryWPF.UI"
        xmlns:Containers="clr-namespace:PhoneDirectoryWPF.Containers"
        xmlns:System="clr-namespace:System;assembly=mscorlib" x:Class="PhoneDirectoryWPF.UI.EditWindow"
        Style="{StaticResource GlobalMaterialStyle}"
        mc:Ignorable="d"
        x:Name="MyEditWindow"
        Title="Edit" Height="367" Width="1070.9" ResizeMode="NoResize" WindowStartupLocation="CenterScreen" WindowStyle="ThreeDBorderWindow" ContentRendered="EditWindow_ContentRendered" DataContextChanged="EditWindow_DataContextChanged">

    <Window.DataContext>
        <Containers:Extension />
    </Window.DataContext>

    <materialDesign:DialogHost x:Name="PopupDialogHost" Identifier="PopHost">
        <Grid>
            <GroupBox Style="{StaticResource MaterialDesignCardGroupBox}" materialDesign:ShadowAssist.ShadowDepth="Depth4" x:Name="FieldGroupBox" Header="Edit Extension" Margin="10" FontSize="16">
                <Grid Name="FieldGrid">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="68*" />
                        <RowDefinition Height="70*" />
                        <RowDefinition Height="19*" />
                        <RowDefinition Height="109*" />
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="80*" />
                        <ColumnDefinition Width="130*" />
                        <ColumnDefinition Width="270*" />
                        <ColumnDefinition Width="285*" />
                        <ColumnDefinition Width="262*" />
                    </Grid.ColumnDefinitions>
                    <ProgressBar x:Name="WaitingSpinner" Visibility="Hidden" Style="{StaticResource MaterialDesignCircularProgressBar}" Value="0" IsIndeterminate="True" Width="50" Height="50" Grid.Column="0" Grid.ColumnSpan="5" Grid.Row="0" Grid.RowSpan="4" HorizontalAlignment="Center"/>
                    <TextBox x:Name="idTextBox" IsEnabled="{Binding InputEnabled, ElementName=MyEditWindow}" Margin="10,0,10,7" TextWrapping="Wrap" Grid.Column="0" IsReadOnly="True" materialDesign:HintAssist.Hint="ID" Style="{StaticResource MaterialDesignFloatingHintTextBox}" FontSize="16" Text="{Binding ID, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" Height="53" VerticalAlignment="Bottom" />
                    <TextBox x:Name="extensionTextBox" IsEnabled="{Binding InputEnabled, ElementName=MyEditWindow}" Height="53" Margin="10,0,10,7" TextWrapping="Wrap" VerticalAlignment="Bottom" Grid.Column="1" materialDesign:HintAssist.Hint="Extension" Style="{StaticResource MaterialDesignFloatingHintTextBox}" FontSize="16" Text="{Binding Number, Mode=TwoWay, UpdateSourceTrigger=Default}" />
                    <TextBox x:Name="firstNameTextBox" IsEnabled="{Binding InputEnabled, ElementName=MyEditWindow}" Height="53" Margin="10,0,10,7" TextWrapping="Wrap" VerticalAlignment="Bottom" Grid.Column="2" materialDesign:HintAssist.Hint="First Name" Style="{StaticResource MaterialDesignFloatingHintTextBox}" FontSize="16" Text="{Binding FirstName, Mode=TwoWay, NotifyOnTargetUpdated=True, NotifyOnSourceUpdated=True, UpdateSourceTrigger=PropertyChanged}" />
                    <TextBox x:Name="lastNameTextBox" IsEnabled="{Binding InputEnabled, ElementName=MyEditWindow}" Height="53" Margin="10,0,10,7" TextWrapping="Wrap" VerticalAlignment="Bottom" Grid.Column="3" materialDesign:HintAssist.Hint="Last Name (Optional)" Style="{StaticResource MaterialDesignFloatingHintTextBox}" FontSize="16" Text="{Binding LastName, Mode=TwoWay, NotifyOnTargetUpdated=True, NotifyOnSourceUpdated=True, UpdateSourceTrigger=PropertyChanged}" />
                    <TextBox x:Name="departmentTextBox" IsEnabled="{Binding InputEnabled, ElementName=MyEditWindow}" Height="53" Margin="10,0,10,7" TextWrapping="Wrap" VerticalAlignment="Bottom" Grid.Column="4" materialDesign:HintAssist.Hint="Department" Style="{StaticResource MaterialDesignFloatingHintTextBox}" FontSize="16" Text="{Binding Department, Mode=TwoWay, NotifyOnTargetUpdated=True, NotifyOnSourceUpdated=True, UpdateSourceTrigger=PropertyChanged}" />
                    <TextBox x:Name="extensionNameTextBox" IsEnabled="{Binding InputEnabled, ElementName=MyEditWindow}" Margin="10,0,10,10" TextWrapping="Wrap" Grid.Column="2" Grid.Row="1" Grid.ColumnSpan="2" Height="53" VerticalAlignment="Bottom" IsReadOnly="True" materialDesign:HintAssist.Hint="Extension Name" Style="{StaticResource MaterialDesignFloatingHintTextBox}" FontSize="16" Text="{Binding User, Mode=OneWay, NotifyOnTargetUpdated=True, NotifyOnSourceUpdated=True}" />
                    <Grid Grid.Column="4" Margin="0,20,56,1" Grid.Row="3" HorizontalAlignment="Right" Width="195">
                        <Button x:Name="cancelButton" Content="Close" Height="65" Margin="0,0,8,0" VerticalAlignment="Top" Click="cancelButton_Click" HorizontalAlignment="Right" Width="150" />
                    </Grid>
                    <Grid Grid.Row="3" Grid.ColumnSpan="3" Margin="46,0,214,0" Height="106" VerticalAlignment="Top">
                        <StackPanel HorizontalAlignment="Center" Margin="0"  VerticalAlignment="Center" Width="Auto" Height="Auto">
                            <Button x:Name="saveButton" IsEnabled="{Binding InputEnabled, ElementName=MyEditWindow}" Content="Save" HorizontalAlignment="Left" Height="30" VerticalAlignment="Center" Width="150" Click="saveButton_Click" Margin="0,0,0,5" />
                            <Button x:Name="addButton" IsEnabled="{Binding InputEnabled, ElementName=MyEditWindow}" Content="Add" HorizontalAlignment="Left" Height="30" VerticalAlignment="Center" Width="150" Click="addButton_Click" Margin="0" />
                            <Button x:Name="deleteButton" IsEnabled="{Binding InputEnabled, ElementName=MyEditWindow}" Content="Delete" HorizontalAlignment="Left" Height="30" VerticalAlignment="Center" Width="150" Click="deleteButton_Click" />
                        </StackPanel>
                    </Grid>
                </Grid>
            </GroupBox>
        </Grid>
    </materialDesign:DialogHost>
</Window>